<div class="container">
    
    <h1>Create New Article</h1>

    <%= form_for @article do |f| %>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
        </div>
        
        <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control", rows: "15" %>
        </div>
        
        <div class="form-group">
            <%= f.submit :Submit, class: "btn btn-success" %>
        </div>

    <% end %>
    
</div>

